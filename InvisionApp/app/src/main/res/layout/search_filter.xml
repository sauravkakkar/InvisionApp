<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFC">


    <RelativeLayout
        android:id="@+id/rl_actionbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#FAFAFA" >


        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back_black" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Logo"
            android:textSize="25sp"
            android:textColor="#000"/>
        <ImageView
            android:id="@+id/slider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/slider"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_filter"
        android:layout_below="@+id/rl_actionbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FCFCFC"
        android:layout_marginTop="2dp">


        <TextView
            android:id="@+id/tv_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Filters"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>


        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:background="@drawable/clear_all"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_lang"
        android:layout_below="@+id/rl_filter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/gradient_top"
            android:layout_marginLeft="10dp"/>


        <TextView
            android:id="@+id/tv_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Language"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000"/>


        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/back_black" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/gradient_top"
            android:layout_marginLeft="10dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_color"
        android:layout_below="@+id/rl_lang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#FCFCFC"
        android:layout_marginTop="1dp">

        <LinearLayout
            android:id="@+id/ll_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

        <RelativeLayout
            android:id="@+id/rl_circle"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tv_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Eye"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"/>

            <ImageView
                android:id="@+id/imv_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_eye"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/circle_blue" />

            <ImageView
                android:id="@+id/imv_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_eye"
                android:layout_toRightOf="@+id/imv_blue"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle_green" />
            <ImageView
                android:id="@+id/imv_brown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_eye"
                android:layout_toRightOf="@+id/imv_green"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/circle_brown" />

            <ImageView
                android:id="@+id/imv_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/circle_black"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:id="@+id/imv_darkbrown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/circle_darkbrown"
                android:layout_toRightOf="@+id/imv_black"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:id="@+id/imv_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/circle_grey"
                android:layout_toRightOf="@+id/imv_darkbrown"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_rectangle"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:layout_marginLeft="10dp">


            <TextView
                android:id="@+id/tv_hair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Hair"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textColor="#000"/>




            <ImageView
                android:id="@+id/imv_rec_lightbrown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_hair"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/rec_brown" />

            <ImageView
                android:id="@+id/imv_rec_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_hair"
                android:layout_toRightOf="@+id/imv_rec_lightbrown"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/rec_black" />
            <ImageView
                android:id="@+id/imv_rec_darkbrown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_hair"
                android:layout_toRightOf="@+id/imv_rec_black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/rec_darkbrown" />

            <ImageView
                android:id="@+id/imv_rec_silver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/rec_grey"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:id="@+id/imv_greyishbrown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/rec_greyishbrown"
                android:layout_toRightOf="@+id/imv_rec_silver"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:id="@+id/imv_rec_majanta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/rec_majanta"
                android:layout_toRightOf="@+id/imv_greyishbrown"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_color"
            android:background="#ECECEC"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_age"
        android:layout_below="@+id/rl_color"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:background="#FAFAFA">
        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/tv_years"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24 - 27 years"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"/>



        <!--<ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_below="@+id/tv_age"

            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"/>-->

        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
            android:layout_below="@+id/tv_age"
            android:id="@+id/rangeSeekbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:corner_radius="10"
            app:min_value="10"
            app:max_value="100"
            app:bar_color="#C1C1C1"
            app:bar_highlight_color="#DD0000"
            app:left_thumb_color="#FFFFFF"
            app:right_thumb_color="#FFFFFF"
            app:left_thumb_color_pressed="#6F6C67"
            app:right_thumb_color_pressed="#6F6C67"
            app:data_type="_integer"

            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_height"
        android:layout_below="@+id/rl_age"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="#FAFAFA">
        <TextView
            android:id="@+id/tv_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/tv_cm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120 cm"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"/>



        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
            android:layout_below="@+id/tv_height"
            android:id="@+id/rangeSeekbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:corner_radius="10"
            app:min_value="10"
            app:max_value="100"
            app:bar_color="#C1C1C1"
            app:bar_highlight_color="#DD0000"
            app:left_thumb_color="#FFFFFF"
            app:right_thumb_color="#FFFFFF"
            app:left_thumb_color_pressed="#6F6C67"
            app:right_thumb_color_pressed="#6F6C67"
            app:data_type="_integer"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_weight"
        android:layout_below="@+id/rl_height"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="#FAFAFA">
        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/tv_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="44 kg"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"/>

        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
            android:layout_below="@+id/tv_weight"
            android:id="@+id/rangeSeekbar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:min_value="10"
            app:max_value="150"
            app:bar_color="#C1C1C1"
            app:bar_highlight_color="#DD0000"
            app:left_thumb_color="#FFFFFF"
            app:right_thumb_color="#FFFFFF"
            app:left_thumb_color_pressed="#6F6C67"
            app:right_thumb_color_pressed="#6F6C67"
            app:data_type="_integer"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_weight"
        android:background="#ECECEC"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <RelativeLayout
        android:id="@+id/rl_sear"
        android:layout_below="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FAFAFA">


    <Button
        android:id="@+id/btn_apply"

        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_centerInParent="true"
        android:text="Apply Filters"
        android:textColor="@android:color/holo_red_dark"
        android:background="@drawable/rectangle"/>

    </RelativeLayout>


</RelativeLayout>

</ScrollView>