<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/rl_images"
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <ImageView
            android:id="@+id/imv_profile"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/detail"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/imv_back"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/back_red" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_above="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Alisa Mistaw"
            android:textSize="25dp"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:text="22, Toronto (7 Km)"
            android:layout_alignParentBottom="true"
            android:textSize="15dp"
            android:textColor="#fff"/>

        <ImageView
            android:id="@+id/imv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/add"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_skill"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_images"
        android:background="#F1F1F1">


        <TextView
            android:id="@+id/tv_skill"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Model"
            android:layout_centerVertical="true"
            android:background="@drawable/temp_rec"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#000"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_web"
        android:layout_below="@+id/rl_skill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light">




<LinearLayout
    android:id="@+id/ll_images"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp">

    <ImageView
        android:id="@+id/imv_1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/imv1"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/imv_2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/group5"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/imv_3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/imv1"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/imv_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:background="@drawable/down_red"
        android:scaleType="fitXY"/>

</LinearLayout>
        
        <LinearLayout
            android:id="@+id/ll_hair"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/ll_images">

            <TextView
                android:id="@+id/tv_hair"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Hair"
                android:layout_marginTop="10dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_hair_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brown"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="55dp"
                android:layout_height="25dp"
                android:text="Edit"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rectangle"
                android:textColor="#E95B5B"
                android:textAllCaps="false"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_eyes"
            android:layout_below="@+id/ll_hair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ll_images"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/tv_eye"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Eyes"
                android:layout_marginTop="10dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_eye_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light Brown"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv_eye"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_height"
            android:layout_below="@+id/rl_eyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ll_images"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/tv_height"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Height"
                android:layout_marginTop="10dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_height2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 ft"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv_height"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_weight"
            android:layout_below="@+id/rl_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ll_images"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:layout_marginTop="10dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_weight2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="47 kg "
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv_weight"/>

        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/rl_language"
            android:layout_below="@+id/rl_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ll_images"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/tv_language"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Language"
                android:layout_marginTop="10dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_language2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manderin,Arabic "
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tv_language"/>

        </RelativeLayout>
<View
    android:id="@+id/view1"
    android:layout_below="@+id/rl_language"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_toRightOf="@+id/ll_images"
    android:layout_margin="20dp"
    android:background="#D8D8D8"/>

        <TextView
            android:id="@+id/tv_about"
            android:layout_below="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABOUT"
            android:textColor="#000"
            android:layout_toRightOf="@+id/ll_images"
            android:layout_marginLeft="20dp"/>


        <TextView
            android:id="@+id/tv_detail"
            android:layout_below="@+id/tv_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sed ut perspiciatis unde omnis iste natus error sit voluptatem ccusantium doloremque laudantium, totam rem aperiam, eaque ipsa quae ab illo inventore veritatis et quasi uae ab illo.Sed ut perspiciatis unde omnis iste natus error sit voluptatem ccusantium doloremque laudantium."
            android:layout_toRightOf="@+id/ll_images"
            android:layout_margin="20dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_sear"
        android:layout_below="@+id/rl_web"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="#fff">

        <Button
            android:id="@+id/btn_searching"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Start Searching"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/rectangle_red"
            android:textColor="#fff"
            android:textAllCaps="false"/>

    </RelativeLayout>






</RelativeLayout>
</ScrollView>